<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/md_grey_300" />
            <stroke
                android:width="1dp"
                android:color="@color/md_grey_300" />
            <corners
                android:radius="8dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/md_grey_300"
                android:endColor="@color/md_grey_300"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/md_grey_300" />
            <corners
                android:radius="8dp" />

        </shape>
    </item>
</selector>