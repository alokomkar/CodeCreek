<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_grey_300">

    <ListView
        android:id="@+id/list_program"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:divider="@android:color/transparent"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:dividerHeight="@dimen/margin_8"
        android:layout_margin="@dimen/margin_8"
        android:background="@color/md_grey_300"/>

    <ListView
        android:id="@+id/list_explanation"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:visibility="gone"
        android:divider="@android:color/transparent"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:dividerHeight="@dimen/margin_8"
        android:layout_margin="@dimen/margin_8"
        android:background="@color/md_grey_300"/>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_blue_200"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/prevProgramBtn_revise"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:src="@android:drawable/ic_media_rew"
            android:text=">" />

        <Button
            android:id="@+id/descriptionBtn"
            style="@style/ButtonText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:text="@string/description" />

        <ImageButton
            android:id="@+id/hintProgramBtn"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:src="@android:drawable/ic_menu_help"
            android:layout_height="match_parent"
            android:background="@drawable/button_blue"
            android:text="@string/hintBtn" />

        <ImageButton
            android:id="@+id/showAllBtn_revise"
            style="@style/ButtonText"
            android:layout_width="50dp"
            android:src="@drawable/ic_remove"
            android:layout_height="match_parent"
            android:background="@drawable/button_blue" />

        <ImageButton
            android:id="@+id/nextProgramBtn_revise"
            style="@style/ButtonText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:src="@android:drawable/ic_media_ff"
            android:text=">" />
    </LinearLayout>

</LinearLayout>