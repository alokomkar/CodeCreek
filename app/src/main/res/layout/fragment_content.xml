<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_8"
    app:cardUseCompatPadding="true"

    app:cardElevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardBackgroundColor="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/tvType"
            android:background="@color/md_grey_400"
            android:textColor="@color/white"
            android:text="@string/header"
            android:padding="@dimen/margin_8"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:visibility="gone"
            tools:visibility="visible"
            android:background="@color/md_blue_600"
            android:id="@+id/tvHeader"
            android:layout_marginEnd="@dimen/margin_48"
            style="@style/TextAppearance.AppCompat.Headline"
            android:padding="@dimen/margin_8"
            android:textColor="@color/white"
            tools:text="@string/action_terms_and_conditions"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_marginStart="@dimen/margin_32"
            android:background="@color/md_blue_grey_100"
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/tvBullets"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:padding="@dimen/margin_8"
            android:textColor="@color/md_black_1000"
            tools:text="@string/unlock_programs_description"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:background="@color/md_yellow_50"
            android:id="@+id/tvContent"
            android:padding="@dimen/margin_8"
            android:textColor="@color/md_black_1000"
            tools:text="@string/divide_and_conquer_description"/>

        <ScrollView
            tools:ignore="Overdraw"
            android:layout_marginTop="@dimen/margin_8"
            android:id="@+id/scroll_view"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_black_1000">

            <com.sortedqueue.programmercreek.view.CodeEditor
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/hello_world_program"
                android:gravity="start|top"
                android:typeface="monospace"
                android:textSize="12sp"
                android:textColor="@color/editor_text"
                android:ellipsize="end"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textMultiLine|textNoSuggestions"
                android:background="@color/md_black_1000"/>

        </ScrollView>

    </LinearLayout>
</android.support.v7.widget.CardView>
