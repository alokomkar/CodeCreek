<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_grey_300"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.sortedqueue.programmercreek.fragments.FillBlankFragment">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:id="@+id/descriptionLayout"
            android:visibility="gone"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/md_white_1000"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_16"
                android:textSize="@dimen/text_dashboard_small"
                android:textColor="@color/md_black_1000"
                android:id="@+id/programDescriptionTextView"
                android:text="1. include header\n2. main function declaration\n3. print hello world " />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16"
            android:id="@+id/programLayout"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_below="@+id/descriptionLayout"
            card_view:cardBackgroundColor="@color/md_white_1000"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_16"
                android:textSize="@dimen/text_dashboard_small"
                android:textColor="@color/md_black_1000"
                android:text="@string/program_fill_blanks"
                android:id="@+id/programBlankLineTextView"/>
        </android.support.v7.widget.CardView>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/programLayout"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginRight="@dimen/margin_8"
            android:paddingBottom="@dimen/margin_8"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answerLayout1"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:background="@drawable/option"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_8"
                    android:orientation="vertical">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer1RadioButton1"
                        android:text="@string/option"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer1RadioButton2"
                        android:text="@string/option"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer1RadioButton3"
                        android:text="@string/option"/>

                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/option"
                    android:layout_margin="@dimen/margin_8"
                    android:orientation="vertical">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer2RadioButton1"
                        android:text="@string/option"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer2RadioButton2"
                        android:text="@string/option"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer2RadioButton3"
                        android:text="@string/option"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answerLayout2"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/option"
                    android:layout_margin="@dimen/margin_8"
                    android:orientation="vertical">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer3RadioButton1"
                        android:text="@string/option"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer3RadioButton2"
                        android:text="@string/option"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer3RadioButton3"
                        android:text="@string/option"/>
                </RadioGroup>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/option"
                    android:layout_margin="@dimen/margin_8"
                    android:orientation="vertical">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer4RadioButton1"
                        android:text="@string/option"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer4RadioButton2"
                        android:text="@string/option"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/answer4RadioButton3"
                        android:text="@string/option"/>
                </RadioGroup>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/checkButton"
                android:textColor="@color/white"
                android:text="@string/check"
                android:layout_margin="@dimen/margin_8"
                android:background="@drawable/button_blue"/>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
