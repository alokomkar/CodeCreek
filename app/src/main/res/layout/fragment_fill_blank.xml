<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/md_grey_300"
        android:layout_above="@+id/checkButton"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.sortedqueue.programmercreek.fragments.FillBlankFragment">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_16"
                android:textSize="@dimen/text_dashboard_small"
                android:textColor="@color/md_black_1000"
                android:id="@+id/headerTextView"
                android:text="Header" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_16"
                android:layout_marginRight="@dimen/margin_16"
                android:layout_marginBottom="@dimen/margin_8"
                android:id="@+id/programLayout"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_below="@+id/headerTextView"
                card_view:cardBackgroundColor="@color/md_white_1000"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="4dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:padding="@dimen/margin_16"
                    android:textSize="@dimen/text_fill_blanks"
                    android:textColor="@color/md_blue_900"
                    android:text="@string/program_fill_blanks"
                    android:id="@+id/programBlankLineTextView"/>
                <io.github.kbiakov.codeview.CodeView
                    android:id="@+id/programCodeView"
                    android:visibility="gone"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/option"
                android:layout_below="@+id/programLayout"
                android:paddingBottom="@dimen/margin_8"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/answerLayout1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option1TextView"
                        android:text="@string/about"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/margin_8"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:layout_marginRight="@dimen/margin_12"
                        android:padding="@dimen/margin_8"
                        />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8"
                        android:orientation="vertical">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer1RadioButton1"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer1RadioButton2"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer1RadioButton3"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>

                    </RadioGroup>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option2TextView"
                        android:text="@string/about"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/margin_4"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:layout_marginRight="@dimen/margin_12"
                        android:padding="@dimen/margin_8"
                        />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8"
                        android:orientation="vertical">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer2RadioButton1"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer2RadioButton2"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer2RadioButton3"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/answerLayout2"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option3TextView"
                        android:text="@string/about"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/margin_8"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:layout_marginRight="@dimen/margin_12"
                        android:padding="@dimen/margin_8"
                        />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8"
                        android:orientation="vertical">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer3RadioButton1"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer3RadioButton2"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer3RadioButton3"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                    </RadioGroup>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option4TextView"
                        android:text="@string/about"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/margin_4"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:layout_marginRight="@dimen/margin_12"
                        android:padding="@dimen/margin_8"
                        />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8"
                        android:orientation="vertical">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer4RadioButton1"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer4RadioButton2"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer4RadioButton3"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/answerLayout3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option5TextView"
                        android:text="@string/about"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/margin_8"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:layout_marginRight="@dimen/margin_12"
                        android:padding="@dimen/margin_8"
                        />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8"
                        android:orientation="vertical">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer5RadioButton1"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer5RadioButton2"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer5RadioButton3"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>

                    </RadioGroup>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option6TextView"
                        android:text="@string/about"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/margin_4"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:layout_marginRight="@dimen/margin_12"
                        android:padding="@dimen/margin_8"
                        />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8"
                        android:orientation="vertical">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer6RadioButton1"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer6RadioButton2"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer6RadioButton3"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/answerLayout4"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option7TextView"
                        android:text="@string/about"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/margin_8"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:layout_marginRight="@dimen/margin_12"
                        android:padding="@dimen/margin_8"
                        />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8"
                        android:orientation="vertical">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer7RadioButton1"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer7RadioButton2"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer7RadioButton3"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                    </RadioGroup>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/option8TextView"
                        android:text="@string/about"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/margin_4"
                        android:background="@color/colorPrimary"
                        android:layout_marginLeft="@dimen/margin_12"
                        android:layout_marginRight="@dimen/margin_12"
                        android:padding="@dimen/margin_8"
                        />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_8"
                        android:orientation="vertical">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer8RadioButton1"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer8RadioButton2"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/answer8RadioButton3"
                            android:textSize="@dimen/text_dashboard_small"
                            android:text="@string/option"/>
                    </RadioGroup>

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkButton"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:text="@string/check"
        android:layout_margin="@dimen/margin_8"
        android:background="@drawable/button_blue"/>
</RelativeLayout>

