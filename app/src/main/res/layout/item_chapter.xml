<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvChapter"
        android:layout_margin="@dimen/margin_12"
        app:cardCornerRadius="@dimen/margin_8"
        app:cardElevation="@dimen/margin_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chapter_gradient"
            android:padding="@dimen/margin_12"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvHeader"
                android:minLines="2"
                style="@style/TextAppearance.AppCompat.Large"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:textColor="@color/white"
                android:text="@string/top_learners"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:textColor="@color/md_grey_100"
                android:text="@string/level_novice"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/pbCompletion"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_height="8dp"
                android:progressDrawable="@drawable/gradient_progress"
                android:progress="60"
                />

        </LinearLayout>

        <ImageView
            android:contentDescription="@string/locked"
            android:id="@+id/ivChapterLocked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/margin_16"
            android:background="@color/transparent_black_60"
            android:src="@drawable/ic_chapter_lock"/>

    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        tools:visibility="gone"
        android:layout_marginTop="-20dp"
        android:id="@+id/cvModules"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/margin_16"
            android:paddingStart="@dimen/margin_16"
            android:id="@+id/rvModules"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/item_sub_module" />

    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/ivChapterKey"
        android:contentDescription="@string/key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_8"
        android:layout_margin="@dimen/margin_12"
        android:background="@drawable/gradient_color"
        android:src="@drawable/ic_chapter_key"/>

</LinearLayout>