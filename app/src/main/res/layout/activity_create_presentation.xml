<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:fitsSystemWindows="true"
    tools:context="com.sortedqueue.programmercreek.activity.ChaptersActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addCodeTextView"
        android:layout_marginBottom="259dp"
        android:elevation="6dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:background="@drawable/button_check"
        android:layout_marginRight="@dimen/margin_72"
        android:layout_gravity="bottom|end"
        android:padding="@dimen/margin_4"
        android:textColor="@color/white"
        android:text="@string/add_code"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addCodeFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="255dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/margin_24"
        android:visibility="invisible"
        tools:visibility="visible"
        app:fabSize="mini"
        app:backgroundTint="@color/md_green_400"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addPhotoTextView"
        android:layout_marginBottom="204dp"
        android:elevation="6dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:background="@drawable/button_anonymous"
        android:layout_marginRight="@dimen/margin_72"
        android:layout_gravity="bottom|end"
        android:padding="@dimen/margin_4"
        android:textColor="@color/white"
        android:text="@string/add_photo"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addPhotoFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/margin_24"
        android:visibility="invisible"
        tools:visibility="visible"
        app:fabSize="mini"
        app:backgroundTint="@color/md_green_400"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@android:drawable/ic_menu_camera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deleteSlideTextView"
        android:layout_marginBottom="149dp"
        android:elevation="6dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:background="@drawable/button_clear"
        android:layout_marginRight="@dimen/margin_72"
        android:layout_gravity="bottom|end"
        android:padding="@dimen/margin_4"
        android:textColor="@color/white"
        android:text="@string/delete_slide"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/deleteSlideFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="145dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/margin_24"
        android:visibility="invisible"
        tools:visibility="visible"
        app:fabSize="mini"
        app:backgroundTint="@color/md_green_400"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@android:drawable/ic_menu_delete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addSlideTextView"
        android:layout_marginBottom="94dp"
        android:elevation="6dp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:background="@drawable/button_sky"
        android:layout_marginRight="@dimen/margin_72"
        android:layout_gravity="bottom|end"
        android:padding="@dimen/margin_4"
        android:textColor="@color/white"
        android:text="@string/add_slide"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addSlideFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_gravity="bottom|end"
        tools:visibility="visible"
        app:fabSize="mini"
        android:layout_marginRight="@dimen/margin_24"
        android:visibility="invisible"
        app:elevation="6dp"
        app:backgroundTint="@color/md_green_400"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_add" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/optionsFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:elevation="6dp"
        app:fabSize="normal"
        app:backgroundTint="@color/md_green_400"
        app:pressedTranslationZ="12dp"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_add" />

    <RelativeLayout
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
        <android.support.design.widget.TextInputLayout
            android:padding="@dimen/margin_16"
            android:id="@+id/presentationInputLayout"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:padding="@dimen/margin_4"
            android:background="@android:color/transparent"
            android:inputType="textCapWords"
            android:textColorHint="@color/md_grey_500"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_800"
            tools:text="@string/about"
            android:textSize="@dimen/text_dashboard_small"
            android:hint="@string/presentation_title"
            android:id="@+id/presentationTitleEditText"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/tagsRecyclerView"
            android:layout_below="@+id/presentationInputLayout">
        </android.support.v7.widget.RecyclerView>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_below="@+id/tagsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
