<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnLayout"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvQuestion"
            android:padding="@dimen/margin_8"
            android:background="@color/bg"
            android:textSize="@dimen/text_dashboard_small"
            tools:text="This is a long question to check overlapping issue"/>

        <RelativeLayout
            android:id="@+id/fillLayout"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvFillBlanks"
                android:background="@color/md_grey_300"
                android:textColor="@color/md_black_1000"
                android:padding="@dimen/margin_8"
                android:text="@string/fill_blanks"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivBack"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/margin_4"
                android:background="@drawable/button_clear"
                android:src="@drawable/ic_backspace_white_24dp"/>

            <TextView
                android:layout_below="@+id/tvFillBlanks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvFillQuestion"
                android:padding="@dimen/margin_8"
                android:background="@color/bg"
                android:textSize="@dimen/text_dashboard_small"
                tools:text="This is a long question to check overlapping issue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_8"
                android:background="@color/md_black_1000"
                android:textColor="@color/md_grey_500"
                android:textSize="@dimen/text_dashboard_small"
                android:id="@+id/syntaxSolutionTextView"
                android:visibility="gone"
                tools:text="@string/printf_solution"/>

        </RelativeLayout>



        <ScrollView
            tools:ignore="Overdraw"
            android:layout_marginTop="@dimen/margin_8"
            android:id="@+id/scroll_view"
            android:visibility="visible"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_black_1000">

            <com.sortedqueue.programmercreek.view.CodeEditor
                android:id="@+id/codeQuestionEditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/hello_world_program"
                android:gravity="start|top"
                android:typeface="monospace"
                android:textSize="12sp"
                android:textColor="@color/editor_text"
                android:ellipsize="end"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textMultiLine|textNoSuggestions"
                android:background="@color/md_black_1000"/>

        </ScrollView>

        <io.github.kbiakov.codeview.CodeView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/codeView"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_8"
            android:background="@color/md_black_1000"
            android:textColor="@color/md_grey_500"
            android:textSize="@dimen/text_dashboard_small"
            android:id="@+id/tvOutput"
            tools:text="Infinite Programmer"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/md_blue_grey_200"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rvOptions"
            android:nestedScrollingEnabled="false"
            tools:listitem="@layout/item_interview_option"/>
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:fabSize="normal"
        android:src="@android:drawable/checkbox_on_background"
        android:id="@+id/tvCheck"
        android:text="@string/check"
        android:gravity="center"
        android:layout_margin="@dimen/margin_4"
        android:padding="@dimen/margin_8"
        android:textColor="@color/white"
        android:textSize="@dimen/text_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin_36"
        android:background="@drawable/chapter_gradient"
        android:id="@+id/btnLayout"
        android:orientation="horizontal">

        <ImageView
            android:padding="@dimen/margin_4"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@android:drawable/ic_media_previous"
            android:id="@+id/btnPrev"/>

        <ImageView
            android:padding="@dimen/margin_4"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_next"
            android:id="@+id/btnNext"/>

    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone"
        android:gravity="center"
        android:background="@color/transparent_black"
        android:elevation="@dimen/margin_24"
        android:animateLayoutChanges="true"
        android:id="@+id/progressLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:paddingTop="@dimen/margin_8"
            android:paddingRight="@dimen/margin_16"
            android:paddingBottom="@dimen/margin_8"
            android:paddingLeft="@dimen/margin_16"
            android:id="@+id/completionTextView"
            android:gravity="center"
            android:textSize="@dimen/text_extra_large_dashboard"
            tools:text="45"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:paddingTop="@dimen/margin_8"
            android:paddingRight="@dimen/margin_16"
            android:paddingBottom="@dimen/margin_8"
            android:paddingLeft="@dimen/margin_16"
            android:id="@+id/reputationTextView"
            android:gravity="center"
            tools:text="Complete : Level 10"
            tools:ignore="RtlHardcoded" />

        <ProgressBar
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            android:padding="@dimen/margin_32"
            android:id="@+id/reputationProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progressDrawable="@drawable/big_circular_progress"
            tools:progress="90" />



    </FrameLayout>

</RelativeLayout>