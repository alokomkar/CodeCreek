<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_grey_300">

    <ListView
        android:id="@+id/list_program"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:divider="@android:color/transparent"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:dividerHeight="@dimen/margin_8"
        android:layout_margin="@dimen/margin_8"
        android:background="@color/md_grey_300"/>

    <ListView
        android:id="@+id/list_explanation"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:visibility="gone"
        android:divider="@android:color/transparent"
        android:headerDividersEnabled="true"
        android:footerDividersEnabled="true"
        android:dividerHeight="@dimen/margin_8"
        android:layout_margin="@dimen/margin_8"
        android:background="@color/md_grey_300"/>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/md_blue_200"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/prevProgramBtn"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_rew"
            android:background="@drawable/button_blue"
            style="@style/ButtonText" />
        <Button
            android:id="@+id/descriptionBtn"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:background="@drawable/button_blue"
            style="@style/ButtonText"/>

        <ImageButton
            android:id="@+id/nextProgramBtn"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_ff"
            android:background="@drawable/button_blue"
            style="@style/ButtonText" />

    </LinearLayout>


</LinearLayout>