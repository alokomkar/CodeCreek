<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieGridCardView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardView:cardCornerRadius="5dp"
    cardView:cardElevation="2dp"
    android:layout_margin="@dimen/margin_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/margin_48"
            android:layout_height="@dimen/margin_48"
            android:layout_margin="@dimen/margin_8"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@android:color/holo_blue_dark"
            android:id="@+id/movieGridItemImageView"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userNameTextView"
            android:layout_toRightOf="@+id/movieGridItemImageView"
            android:paddingLeft="@dimen/margin_8"
            android:paddingRight="@dimen/margin_8"
            android:paddingTop="@dimen/margin_4"
            android:textSize="@dimen/text_dashboard"
            android:textColor="@color/md_black_1000"
            tools:text="@string/about"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/levelTextView"
            android:textSize="@dimen/text_dashboard_small"
            android:layout_below="@+id/userNameTextView"
            android:layout_toRightOf="@+id/movieGridItemImageView"
            android:paddingLeft="@dimen/margin_8"
            android:paddingRight="@dimen/margin_8"
            android:paddingTop="@dimen/margin_4"
            android:textColor="@color/md_black_1000"
            tools:text="@string/level_10"/>

    </RelativeLayout>





</android.support.v7.widget.CardView>