<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_8"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/md_white_1000"
    app:cardCornerRadius="@dimen/cardview_app_radius"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shareImageView"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_menu_send"/>
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/slide_title"
                android:layout_toLeftOf="@+id/shareImageView"
                android:paddingBottom="@dimen/margin_8"
                android:paddingLeft="@dimen/margin_16"
                android:paddingRight="@dimen/margin_16"
                android:paddingTop="@dimen/margin_8"
                android:textColor="@color/md_teal_500"
                android:textSize="@dimen/text_dashboard_small"
                tools:text="@string/slide_title" />
        </RelativeLayout>

        <TextView
            android:id="@+id/subTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_blue_grey_600"
            android:hint="@string/sub_title"
            android:paddingBottom="@dimen/margin_8"
            android:paddingLeft="@dimen/margin_16"
            android:paddingRight="@dimen/margin_16"
            android:paddingTop="@dimen/margin_8"
            android:textColor="@color/white"
            android:textSize="@dimen/text_dashboard_small"
            tools:text="@string/slide_title" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawablePadding="@dimen/margin_4"
                android:textColor="@color/md_blue_900"
                android:id="@+id/viewsTextView"
                android:drawableLeft="@android:drawable/ic_menu_view"
                android:text="@string/views"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_8"
                android:drawablePadding="@dimen/margin_4"
                android:textColor="@color/md_blue_900"
                android:id="@+id/likesTextView"
                android:drawableLeft="@android:drawable/btn_star_big_on"
                android:text="@string/likes"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
