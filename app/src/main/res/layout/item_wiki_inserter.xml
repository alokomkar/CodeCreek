<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/wikiHeaderEditText"
        android:textColor="@color/md_black_1000"
        android:hint="@string/program_wiki_header"
        android:padding="@dimen/margin_16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2"
        android:background="@color/bg" />

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/wikiExplanationEditText"
        android:textColor="@color/md_black_1000"
        android:minLines="8"
        android:gravity="top"
        android:hint="@string/explanation"
        android:padding="@dimen/margin_16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2"
        android:background="@color/bg" />

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/wikiExampleEditText"
        android:textColor="@color/md_black_1000"
        android:minLines="8"
        android:gravity="top"
        android:hint="@string/explanation"
        android:padding="@dimen/margin_16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2"
        android:background="@color/bg" />

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_black_1000"
        android:id="@+id/wikiOuptputEditText"
        android:textColor="@color/white"
        android:minLines="8"
        android:gravity="top"
        android:textColorHint="@color/bg"
        android:hint="@string/outputTxt"
        android:padding="@dimen/margin_16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_2"
        android:background="@color/bg" />

</LinearLayout>