<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/white"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/margin_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@color/md_blue_600"
                android:id="@+id/tvHeader"
                style="@style/TextAppearance.AppCompat.Medium"
                android:padding="@dimen/margin_8"
                android:textColor="@color/white"
                tools:text="@string/action_terms_and_conditions"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="gone"
                android:layout_marginTop="@dimen/margin_8"
                android:gravity="start"
                android:background="@color/md_blue_grey_100"
                android:id="@+id/tvBullets"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:padding="@dimen/margin_8"
                android:textColor="@color/md_black_1000"
                tools:text="@string/unlock_programs_description"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="gone"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@color/md_yellow_50"
                android:id="@+id/tvContent"
                android:padding="@dimen/margin_8"
                android:textColor="@color/md_black_1000"
                tools:text="@string/divide_and_conquer_description"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:visibility="gone"
                android:id="@+id/ivContent"
                android:src="@drawable/splash_logo"
                android:contentDescription="@string/image_content" />

            <ScrollView
                tools:ignore="Overdraw"
                android:layout_marginTop="@dimen/margin_8"
                android:id="@+id/scroll_view"
                android:visibility="visible"
                tools:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:padding="@dimen/margin_8"
                        android:layout_gravity="right"
                        android:background="@color/colorAccent"
                        android:id="@+id/tvPracticeNow"
                        android:text="@string/practice_now"
                        tools:ignore="RtlHardcoded" />

                    <com.sortedqueue.programmercreek.view.CodeEditor
                        android:id="@+id/editor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="@string/hello_world_program"
                        android:gravity="start|top"
                        android:typeface="monospace"
                        android:textSize="12sp"
                        android:textColor="@color/editor_text"
                        android:ellipsize="end"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:background="@color/md_black_1000"/>
                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>