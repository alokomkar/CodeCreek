<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/margin_16"
            android:id="@+id/cProgramsTextView"
            android:onClick="onItemClick"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@drawable/button_language"
            android:text="C \nPrograms"
            android:elevation="@dimen/margin_8"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/text_dashboard"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/cppProgramsTextView"
            android:onClick="onItemClick"
            android:padding="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@drawable/button_language"
            android:text="C++ Programs"
            android:elevation="@dimen/margin_8"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/text_dashboard"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/javaProgramsTextView"
            android:onClick="onItemClick"
            android:padding="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@drawable/button_language"
            android:text="Java Programs"
            android:elevation="@dimen/margin_8"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/text_dashboard"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/adaProgramsTextView"
            android:onClick="onItemClick"
            android:padding="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:background="@drawable/button_language"
            android:text="ADA Programs"
            android:elevation="@dimen/margin_8"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/text_dashboard"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>